@model IEnumerable<Cinefilos.Models.Sessao>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (!User.IsInRole("Cliente"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Filme.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sala.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario_i)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario_f)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duracao)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Poltronas)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Filme.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sala.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Horario_i)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Horario_f)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duracao)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Poltronas)
        </td>*@
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id_sessao }) |
        </td>
      @if (!User.IsInRole("Cliente"))
      {
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id_sessao }) |
          
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_sessao })
        </td>
      }
    </tr>
}

</table>
